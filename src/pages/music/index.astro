---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ReleaseCard from '../../components/ReleaseCard.astro';
import { getCollection } from 'astro:content';

const releases = (await getCollection('releases')).sort((a, b) =>
  b.data.date.getTime() - a.data.date.getTime()
);
---

<BaseLayout title="Music - CLAY" description="Discography and releases by CLAY">
  <section class="container mx-auto px-4 py-16">
    <h1 class="mb-4">Discography</h1>
    <p class="text-xl text-[--text-secondary] max-w-2xl mb-16">
      Industrial techno, ambient textures, and field recordings from urban spaces.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {releases.map((release) => (
        <ReleaseCard
          title={release.data.title}
          date={release.data.date}
          coverImage={release.data.coverImage}
          coverAlt={release.data.coverAlt}
          slug={release.id}
          shortDescription={release.data.shortDescription}
          featured={release.data.featured}
        />
      ))}
    </div>

    {releases.length === 0 && (
      <div class="text-center py-20">
        <p class="text-[--text-secondary]">No releases yet. Check back soon.</p>
      </div>
    )}
  </section>
</BaseLayout>
