---
interface Props {
  title: string;
  date: Date;
  coverImage: string;
  coverAlt: string;
  slug: string;
  shortDescription: string;
  featured?: boolean;
}

const {
  title,
  date,
  coverImage,
  coverAlt,
  slug,
  shortDescription,
  featured = false
} = Astro.props;
---

<article class={`card group transition-all hover:border-[--accent]/50 ${featured ? 'md:col-span-2' : ''}`}>
  <a href={`/music/${slug}`} class="block">
    <div class={`aspect-square overflow-hidden bg-neutral-900 ${featured ? 'md:aspect-[2/1]' : ''}`}>
      <img
        src={coverImage}
        alt={coverAlt}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
    </div>
    <div class="p-6">
      <time class="text-xs text-[--text-muted] uppercase tracking-wider">
        {date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
      </time>
      <h3 class="text-xl font-bold mt-2 mb-3 accent-hover">{title}</h3>
      <p class="text-sm text-[--text-secondary] leading-relaxed">{shortDescription}</p>
    </div>
  </a>
</article>
