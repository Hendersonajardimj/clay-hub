---
import { getCollection } from 'astro:content';

interface Props {
  limit?: number;
  featured?: boolean;
}

const { limit, featured = false } = Astro.props;

let photos = await getCollection('photos');

if (featured) {
  photos = photos.filter(p => p.data.featured);
}

photos = photos.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

if (limit) {
  photos = photos.slice(0, limit);
}
---

<div class="photo-grid grid grid-cols-2 md:grid-cols-3 gap-4">
  {photos.map((photo) => (
    <a
      href={`/visuals/${photo.id}`}
      class="card group relative aspect-[4/5] overflow-hidden transition-all hover:border-[--accent]/50"
    >
      <img
        src={photo.data.image}
        alt={photo.data.alt}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      <div class="photo-overlay absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <p class="text-sm font-bold">{photo.data.location}</p>
          <p class="text-xs text-[--text-secondary]">
            {photo.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </p>
          {photo.data.printAvailable && (
            <span class="inline-block mt-2 text-xs text-[--accent] uppercase tracking-wider">
              Print Available
            </span>
          )}
        </div>
      </div>
    </a>
  ))}
</div>
