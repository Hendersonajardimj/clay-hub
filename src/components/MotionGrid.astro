---
import { getCollection } from 'astro:content';

interface Props {
  limit?: number;
  featured?: boolean;
}

const { limit, featured = false } = Astro.props;

let motionItems = await getCollection('motion');

if (featured) {
  motionItems = motionItems.filter(m => m.data.featured);
}

motionItems = motionItems.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

if (limit) {
  motionItems = motionItems.slice(0, limit);
}
---

<div class="motion-grid grid grid-cols-2 md:grid-cols-3 gap-4">
  {motionItems.map((item) => (
    <div class="card group relative aspect-[9/16] overflow-hidden transition-all hover:border-[--accent]/50">
      {item.data.videoPath ? (
        <video
          src={item.data.videoPath}
          poster={item.data.thumbnail}
          class="w-full h-full object-cover group-hover:brightness-110 transition-all"
          loop
          muted
          playsinline
          data-autoplay
          loading="lazy"
        />
      ) : (
        <img
          src={item.data.thumbnail}
          alt={item.data.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      )}
      <div class="motion-overlay absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
        <div class="text-center p-4">
          <p class="text-sm font-bold mb-2">{item.data.title}</p>
          {item.data.instagramUrl && (
            <a
              href={item.data.instagramUrl}
              target="_blank"
              rel="noopener"
              class="inline-block text-xs text-[--accent] uppercase tracking-wider hover:underline"
            >
              View on Instagram â†’
            </a>
          )}
        </div>
      </div>
    </div>
  ))}
</div>

<script>
  // Autoplay videos when visible
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const video = entry.target as HTMLVideoElement;
      if (entry.isIntersecting) {
        video.play().catch(() => {});
      } else {
        video.pause();
      }
    });
  }, { threshold: 0.5 });

  document.querySelectorAll('[data-autoplay]').forEach((video) => {
    observer.observe(video);
  });
</script>
